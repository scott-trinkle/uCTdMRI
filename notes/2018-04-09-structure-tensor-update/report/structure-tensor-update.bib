doi = {10.1016/j.neuroimage.2012.06.042},
file = {:Users/scotttrinkle/Library/Application Support/Mendeley Desktop/Downloaded/Budde, Frank - 2012 - Examining brain microstructure using structure tensor analysis of histological sections.pdf:pdf},
isbn = {1095-9572 (Electronic)$\backslash$r1053-8119 (Linking)},
issn = {10538119},
journal = {NeuroImage},
keywords = {Anisotropy,Crossing fibers,DiI,Diffusion tensor imaging,FODs,Fiber orientation,GFAP,Histology,MAP2,MBP,ST,Structure tensor,x-ray/MRI comparison metrics},
mendeley-tags = {x-ray/MRI comparison metrics},
number = {1},
pages = {1--10},
pmid = {22759994},
publisher = {Elsevier B.V.},
title = {{Examining brain microstructure using structure tensor analysis of histological sections}},
