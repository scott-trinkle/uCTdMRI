journal = {Frontiers in Integrative Neuroscience},
keywords = {anisotropy,anisotropy, diffusion tensor imaging, structure te,crossing fibers,diffusion tensor imaging,fiber orientation,histology,structure tensor,x-ray/MRI comparison metrics},
mendeley-tags = {x-ray/MRI comparison metrics},
